{
    "version": "0.2.0",
    "configurations": [
        // Debug with Flask
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
            ],
            "jinja": true, 
            "justMyCode": false
        }
    ]
}